    <h1>User Management</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr th:each="user : ${users}">
                <td th:text="${user.id}"></td>
                <td th:text="${user.username}"></td>
                <td th:text="${user.email}"></td>
                <td>
                    <a th:href="@{'/admin/users/' + ${user.id}}">Edit</a> |
                    <a th:href="@{'/admin/users/' + ${user.id}}" th:method="delete">Delete</a>
                </td>
            </tr>
        </tbody>
    </table>

    <h2>Create User</h2>
    <form th:action="@{/admin/users/}" th:object="${user}" method="post">
        <label>Username: <input type="text" th:field="*{username}"></label><br>
        <label>Email: <input type="email" th:field="*{email}"></label><br>
        <label>Password: <input type="password" th:field="*{password}"></label><br>
        <button type="submit">Create</button>
    </form>
</body>
